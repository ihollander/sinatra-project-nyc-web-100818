<h1><%= @restaurant.name %></h1>
Rating: <%= @restaurant.rating %> <br>
Address: <%= @restaurant.address %> <br>

<h2>Users who want to eat here</h2>
<ul>
  <% @restaurant.users.each do |user| %>
    <li><%= user.name %></li>
  <% end %>
</ul>
<h2>Add User to List of Restaurants to Try</h2>
<form action="/restaurants/<%= @restaurant.id %>/users" method="post">
  <select name="restaurants[user_id]">
    <% @users.select{|user| !@restaurant.users.include?(user)}.each do |user| %>
      <option value="<%= user.id %>"> <%= user.name %> </option>
    <% end %>
  </select>
  <input type="submit" value="Submit">
</form>
